<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Ellipse?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane stylesheets="@css/sandbox.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.circuit_project.SandboxController">

    <!-- Top Bar -->
    <top>
      <HBox prefHeight="42.0" prefWidth="1481.0" styleClass="toolbar">
         <children>
                <Button fx:id="homeButton" maxHeight="115.0" minHeight="0.0" mnemonicParsing="false" onAction="#goToMainMenu" prefHeight="0.0" prefWidth="37.0">
               <graphic>
                  <ImageView fitHeight="170.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/home.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="logoutIcon2" maxHeight="115.0" minHeight="0.0" mnemonicParsing="false" onAction="#logoutUser2" prefHeight="0.0" prefWidth="37.0">
               <graphic>
                  <ImageView fitHeight="170.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/logout.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="loadButton" maxHeight="115.0" minHeight="0.0" mnemonicParsing="false" onAction="#loadBtnClick" prefHeight="0.0" prefWidth="37.0">
               <graphic>
                  <ImageView fitHeight="170.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/up-loading.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="saveButton" maxHeight="115.0" minHeight="0.0" mnemonicParsing="false" onAction="#saveBtnClick" prefHeight="0.0" prefWidth="37.0">
               <graphic>
                  <ImageView fitHeight="170.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/download.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="toggleGridLinesItem" maxHeight="115.0" minHeight="0.0" mnemonicParsing="false" onAction="#onToggleGridLines" prefHeight="0.0" prefWidth="37.0">
               <graphic>
                  <ImageView fitHeight="170.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/grid.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="toggleDarkModeItem" maxHeight="115.0" minHeight="0.0" mnemonicParsing="false" onAction="#onToggleDarkMode" prefHeight="0.0" prefWidth="37.0">
               <graphic>
                  <ImageView fx:id="darkModeIcon" fitHeight="170.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/moon.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="simBtn" mnemonicParsing="false" onAction="#simulateCircuit" prefHeight="42.0" prefWidth="196.0" text="Button" />
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="clearBtn" maxHeight="115.0" minHeight="0.0" mnemonicParsing="false" onAction="#clearBtnClick" prefHeight="0.0" prefWidth="37.0">
               <graphic>
                  <ImageView fitHeight="170.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/trash.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
    </top>

    <!-- Center Workspace -->
    <center>
        <AnchorPane fx:id="playgroundPane" prefHeight="887.0" prefWidth="1481.0" style="-fx-background-color: BFBFBF;">
            <children>
                <Canvas fx:id="gridCanvas" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
            </children>
        </AnchorPane>
    </center>

    <!-- Bottom Toolbar -->
    <bottom>
        <HBox fx:id="toolTray" alignment="CENTER" prefHeight="100.0" spacing="20.0" style="-fx-background-color: #f0f0f0;" styleClass="toolbar" BorderPane.alignment="CENTER">
            <!-- Battery Icon -->
            <AnchorPane fx:id="batteryIcon" onMouseClicked="#batteryClick" prefHeight="47.0" prefWidth="106.0">
                <children>
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#ababab" height="15.0" layoutX="95.0" layoutY="40.0" stroke="BLACK" width="10.0" />
                    <Rectangle arcHeight="5.0" arcWidth="5.0" height="32.0" layoutX="-3.0" layoutY="31.0" stroke="BLACK" width="104.0" />
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#d78f1d" height="32.0" layoutX="76.0" layoutY="31.0" stroke="BLACK" width="25.0" />
                </children>
            </AnchorPane>

            <!-- Lightbulb Icon -->
            <AnchorPane fx:id="lightbulbIcon" onMouseClicked="#lightbulbClick" prefHeight="91.0" prefWidth="142.0">
                <children>
                    <Ellipse fill="#f8f8f8" layoutX="69.0" layoutY="38.0" radiusX="24.0" radiusY="36.0" stroke="BLACK" />
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#9ba7b2" height="12.0" layoutX="48.0" layoutY="62.0" stroke="BLACK" width="42.0" />
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#818b94" height="10.0" layoutX="52.0" layoutY="70.0" stroke="BLACK" width="35.0" />
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#818b94" height="9.0" layoutX="58.0" layoutY="78.0" stroke="BLACK" width="23.0" />
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#818b94" height="12.0" layoutX="66.0" layoutY="81.0" stroke="BLACK" width="6.0" />
                    <Line endX="-0.5" endY="16.0" layoutX="72.0" layoutY="45.0" startX="-0.5" startY="-21.0" />
                    <Line endX="1.2" endY="8.7" layoutX="71.0" layoutY="53.0" startX="-15.5" startY="-10.0" />
                    <Line endY="-9.0" layoutX="79.0" layoutY="43.0" startX="-24.2" startY="-0.7" />
                </children>
            </AnchorPane>

            <!-- Wire Icon -->
            <Line fx:id="wire" endX="100.0" fill="#508dc6" onMouseClicked="#wireClick" startX="-5.0" stroke="#d04949" strokeLineCap="ROUND" strokeLineJoin="ROUND" strokeWidth="20.0" />
            <!-- Switch Icon -->
            <Pane fx:id="switch" onMouseClicked="#switchClick" prefHeight="38.0" prefWidth="90.0" xmlns:fx="http://javafx.com/fxml/1">
                <children>
                    <!-- Base/background rectangle -->
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#f0f0f0" height="32.0" layoutX="21.0" layoutY="31.0" stroke="BLACK" strokeType="INSIDE" width="80.0" />

                    <!-- Left terminal -->
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#ababab" height="15.0" layoutX="21.0" layoutY="40.0" stroke="BLACK" strokeType="INSIDE" width="10.0" />

                    <!-- Right terminal -->
                    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#ababab" height="15.0" layoutX="91.0" layoutY="40.0" stroke="BLACK" strokeType="INSIDE" width="10.0" />

                    <!-- Switch lever (in closed position) -->
                    <Line endX="75.0" endY="19.0" layoutX="16.0" layoutY="28.0" startX="15.0" startY="19.0" stroke="BLACK" strokeWidth="3.0" />

                    <!-- Switch handle -->
                    <Circle centerX="40.0" centerY="19.0" fill="#d78f1d" layoutX="16.0" layoutY="28.0" radius="8.0" stroke="BLACK" strokeType="INSIDE" />
                </children>
            </Pane>
        </HBox>
    </bottom>
</BorderPane>
